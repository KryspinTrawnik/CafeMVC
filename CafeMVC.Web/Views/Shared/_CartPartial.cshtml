@using Microsoft.AspNetCore.Http;
@using CafeMVC.Application.Helpers;
<ul class="navbar-nav">

    <li class="nav-item">
        <a class="nav-link text-white" asp-controller="Order" asp-action="Cart">
             <i class="fa-solid fa-cart-shopping"></i>
            @if (@Context.Session.GetInt32("qty") > 0)
            {

                <span>@Context.Session.GetInt32("qty")</span>
                <span>Total: &#163; @Context.Session.GetString("total")</span>

            }
            else
            {
                <span>0</span>
            }
        </a>

    </li>
</ul>