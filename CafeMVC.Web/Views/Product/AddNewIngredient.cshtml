@model CafeMVC.Application.ViewModels.Products.IngredientForViewVm
@{ 
    string title = "Add New Ingredient";

}

<h5>@title</h5>
<br />
<br />
@using (Html.BeginForm("AddNewIngredient", "Product", FormMethod.Post))
{
    @Html.Hidden("Id")
    <h5>Name of new ingredient</h5>
        @Html.TextBoxFor(m => m.Name, new { @class = "textBox"})
    <br />
    <button type="submit" class="btn btn-success" name="Btn" value="Submit">Submit</button>   
    <button type="submit" class="btn btn-danger" name="Btn" value="Cancel">Cancel</button>
}
