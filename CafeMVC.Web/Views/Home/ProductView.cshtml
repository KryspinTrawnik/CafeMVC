@model CafeMVC.Web.Models.Product

@{
    ViewData["Title"] = Model.Name;
}


<div>
    <h4> @Html.DisplayFor(model => model.Name)</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
      
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Ingredients)
        </dt>
        <dd class="col-sm-10">

            @for (int i = 0; i < Model.Ingredients.Count; i++)
            {

                @Html.DisplayFor(model => model.Ingredients[i].Name)
                if (i < Model.Ingredients.Count - 1)
                {
                @Html.ViewBag.Space
                }
            }
        </dd>
        <br/>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price) @ViewData["Currency"]
        </dd>
    </dl>
</div>
