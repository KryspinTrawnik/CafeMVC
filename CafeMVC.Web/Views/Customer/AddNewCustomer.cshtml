    <br />
    <h5>Street</h5>
    <h6>
        @Html.TextBoxFor(m => m.Addresses[1].Street)
    </h6>
    <br />
    <h5>Building Number</h5>
    <h6>
        @Html.TextBoxFor(m => m.Addresses[1].BuildingNumber)
    </h6>
    <br />
    <h5>Flat Number</h5>
