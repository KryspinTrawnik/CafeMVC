        @Html.TextBoxFor(m => m.Addresses[1].FlatNumber)
    </h6>
    <br />
    <h5>PostCode</h5>
    <h6>
        @Html.TextBoxFor(m => m.Addresses[1].ZipCode)
    </h6>
    <br />
    <h5>City</h5>
    <h6>
        @Html.TextBoxFor(m => m.Addresses[1].City)
    </h6>
    <br />
    <h5>Country</h5>
    <h6>
        @Html.TextBoxFor(m => m.Addresses[1].Country)
    </h6>
    <br />
    <button type="submit" value="Submit" role="button">Submit</button>
