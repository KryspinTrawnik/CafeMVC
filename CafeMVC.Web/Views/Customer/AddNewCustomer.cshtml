@model CafeMVC.Application.ViewModels.Customer.CustomerForCreationVm

@{
    ViewData["Title"] = "AddNewCustomer";
}

<h1>AddNewCustomer</h1>

<h4>CustomerForCreationVm</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddNewCustomer">
