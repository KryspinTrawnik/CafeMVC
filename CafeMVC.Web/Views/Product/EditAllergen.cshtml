@model CafeMVC.Application.ViewModels.Products.AllergenForViewVm
@{
    string title = "Add New Allergen";

}
<h5>@title</h5>
<br />
<br />
@using (Html.BeginForm("EditAllergen", "Product", FormMethod.Post))
{
    @Html.Hidden("Id")
    <div id="allergen">
        <h5>Name of new ingredient</h5>
        @Html.TextBoxFor(m => m.Name, new { @class = "textBox", @oninput="CheckField('allergen')"})
        <span></span>
        <br />
    </div>
    <button type="submit" class="btn btn-success" name="Btn" value="Submit">Submit</button>
    <button type="submit" class="btn btn-danger" name="Btn" value="Cancel">Cancel</button>
}

@section Scripts{
    <script src="~/js/CustomerInfo.js"></script>
}

